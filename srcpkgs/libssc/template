# Template file for 'libssc'
pkgname=libssc
version=0.2.2
revision=1
build_style=meson
hostmakedepends="pkg-config protobuf protobuf-c glib-devel"
makedepends="glib-devel libqrtr-glib-devel protobuf-c-devel libqmi-devel python-devel"
short_desc="Library to expose Qualcomm Sensor Core sensors"
maintainer="Arseniy <me@adomerle.pw>"
license="GPL-3.0-or-later"
homepage="https://libssc.dylanvanassche.be/"
distfiles="https://codeberg.org/DylanVanAssche/libssc/archive/v${version}.tar.gz"
checksum=4d9e2ae4b0548f19ad53a56d365d72e31d2bb72b4ce7b234a2b69875bc24268f

libssc-devel_package() {
	depends="${makedepends} ${sourcepkg}-${version}_${revision}"
	short_desc+=" - development files"

	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
